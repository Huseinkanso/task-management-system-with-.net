@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_UserLayout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">all projects your working on:</h2>
        </div>
        
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Project name
                </th>
                <th>
                    Starting date
                </th>
                <th>
                    Tasks
                </th>
            </tr>

        </thead>
        <!---->
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.StartingDate
                    </td>
                    <td width="30%">
                        <a asp-controller="User" asp-action="ViewProjectDetails" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">view project details</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>



