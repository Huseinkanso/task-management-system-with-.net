@model Project
@{
    Layout = "_AdminLayout";
}
<div class="container p-3">
    <form asp-action="Create" asp-controller="Project" method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Project</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StartingDate">Starting Date</label>
                <input  asp-for="StartingDate" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary" style="width: 150px">Add</button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width: 150px">
                Back to List
            </a>
        </div>
    </form>
</div>