@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_AdminLayout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">project list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Project" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New project
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                     Project name
                </th>
                <th>
                    Starting date
                </th>
                <th>
                    Tasks
                </th>
            </tr>
            
        </thead>
        <!----><tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.StartingDate
                    </td>
                    <td width="30%">
                        <a asp-controller="Project" asp-action="ViewProjectDetails" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2">view project details</a>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Project" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Project" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>



